{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "VideoProcessing": {
    "MaxConcurrentOperations": 2,
    "TempDirectory": "temp",
    "SupportedFormats": ["mp4", "avi", "mov", "mkv", "webm"],
    "HardwareAcceleration": true
  },
  "UI": {
    "Theme": "Dark",
    "Language": "zh-CN",
    "AutoSaveInterval": 300
  },
  "Export": {
    "DefaultFormat": "mp4",
    "DefaultQuality": "high",
    "DefaultFrameRate": 30
  }
} 