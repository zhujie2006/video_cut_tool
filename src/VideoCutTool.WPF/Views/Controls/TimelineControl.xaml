<UserControl x:Class="VideoCutTool.WPF.Views.Controls.TimelineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">            
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 引入通用样式 -->
                <ResourceDictionary Source="pack://application:,,,/VideoCutTool.WPF;component/Resources/Styles/CommonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- 工具栏 -->
        <Border Grid.Row="0" BorderBrush="#404040" BorderThickness="0,0,0,1" Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- 操作按钮 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                    <Button Command="{Binding UndoCommand}" Width="48"
                        IsEnabled="{Binding CanUndo}" Background="{StaticResource SecondaryButtonBrush}" 
                            Foreground="{StaticResource ButtonTextBrush}" ToolTip="撤销(Ctrl+Z)">
                        <materialDesign:PackIcon Kind="Undo" Width="16" Height="16" />
                    </Button>
                    <Button Command="{Binding RedoCommand}" Margin="4,0" Width="48" HorizontalAlignment="Stretch" ToolTip="重做"
                        IsEnabled="{Binding CanRedo}" Background="{StaticResource SecondaryButtonBrush}" Foreground="{StaticResource ButtonTextBrush}">
                        <materialDesign:PackIcon Kind="Redo" Width="16" Height="16" />
                    </Button>
                    <Button Command="{Binding SplitVideoCommand}" Width="48"
                        Background="{StaticResource SecondaryButtonBrush}" 
                            Foreground="{StaticResource ButtonTextBrush}" ToolTip="切分 (S)">
                        <materialDesign:PackIcon Kind="ContentCut" Width="16" Height="16" />
                    </Button>

                    <Button Command="{Binding RemoveSplitPointAtCurrentTimeCommand}" Margin="4,0" Width="48"
                            IsEnabled="{Binding CanDelete}" Background="{StaticResource SecondaryButtonBrush}"
                            Foreground="{StaticResource ButtonTextBrush}" ToolTip="删除切分点 (Del)">
                        <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                    </Button>

                    <Button Command="{Binding ClearSegmentCommand}" Width="48" IsEnabled="{Binding CanClear}"
                            Background="{StaticResource SecondaryButtonBrush}"
                            Foreground="{StaticResource ButtonTextBrush}" ToolTip="清空切分点 (Ctrl+X)">
                        <materialDesign:PackIcon Kind="DeleteSweep" Width="16" Height="16" />
                    </Button>
                </StackPanel>
                
                <!-- 缩放控制 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- 缩放信息 -->
                    <TextBlock Text="{Binding ElementName=ZoomSlider, Path=Value, StringFormat='缩放: x{0:F0}'}" 
                        VerticalAlignment="Center" Foreground="White" Margin="16,0" HorizontalAlignment="Center" />
                    <Button Style="{StaticResource ToolbarButtonStyle}" Click="ZoomOut_Click" ToolTip="缩小">
                        <materialDesign:PackIcon Kind="Minus" Width="16" Height="16" />
                    </Button>
                    <Slider x:Name="ZoomSlider" Width="80" Minimum="1" Maximum="100" Value="1"
                            Margin="8,0" VerticalAlignment="Center" 
                            ValueChanged="ZoomSlider_ValueChanged" />
                    <Button Style="{StaticResource ToolbarButtonStyle}" Click="ZoomIn_Click" ToolTip="放大">
                        <materialDesign:PackIcon Kind="Plus" Width="16" Height="16" />
                    </Button>
                    <!-- 适应窗口按钮 -->
                    <Button Style="{StaticResource ToolbarButtonStyle}" Click="FitToWindow_Click" ToolTip="适应窗口">
                        <materialDesign:PackIcon Kind="FitToPage" Width="16" Height="16" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 时间轴内容 -->
        <ScrollViewer Grid.Row="1" x:Name="TimelineScrollViewer" 
                      Style="{StaticResource ModernScrollViewerStyle}"
                      HorizontalScrollBarVisibility="Visible"
                      VerticalScrollBarVisibility="Disabled">
            
            <Grid x:Name="TimelineGrid" MinWidth="1000" HorizontalAlignment="Left" Margin="20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" /> <!-- 时间标尺 -->
                    <RowDefinition Height="*" /> 
                    <RowDefinition Height="30" /> <!-- 音频波形轨道 -->
                    <RowDefinition Height="10" /> <!-- 切分点 -->
                </Grid.RowDefinitions>
                
                <!-- 时间标尺 -->
                <Grid Grid.Row="0" x:Name="RulerContainer">
                    <Canvas x:Name="RulerCanvas" Background="Transparent">
                        <!-- 时间刻度线会在这里动态生成 -->
                    </Canvas>
                    
                </Grid>
                
                <!-- 视频缩略图轨道 -->
                <Grid Grid.Row="1" x:Name="VideoTrackContainer" VerticalAlignment="Center">
                    <Canvas x:Name="VideoTrackCanvas" Background="Transparent" Height="{Binding ElementName=VideoTrackContainer, Path=ActualHeight}">
                        <!-- 缩略图会在这里动态生成 -->
                    </Canvas>
                </Grid>
                
                <!-- 音频波形轨道 -->
                <Border Grid.Row="2" x:Name="AudioTrackContainer" Height="40" VerticalAlignment="Top">
                    <Canvas x:Name="AudioTrackCanvas" Background="Transparent" Height="{Binding ElementName=AudioTrackContainer, Path=ActualHeight}">
                        <!-- 音频波形会在这里动态生成 -->
                    </Canvas>
                </Border>

                <!-- 播放头 - 覆盖在所有轨道上方 -->
                <Canvas x:Name="PlayheadCanvas" Grid.RowSpan="3" 
                        Background="Transparent" Cursor="SizeWE"
                        MouseLeftButtonDown="Playhead_MouseLeftButtonDown"
                        MouseMove="Playhead_MouseMove"
                        MouseLeftButtonUp="Playhead_MouseLeftButtonUp">
                    <!-- 播放头线条 -->
                    <Line x:Name="PlayheadLine" 
                          Stroke="#FFD700" StrokeThickness="3" 
                          X1="0" X2="0" Y1="0" Y2="{Binding ElementName=TimelineGrid,Path=ActualHeight}" />
                    <!-- 播放头顶部块 -->
                    <Border x:Name="PlayheadTopBlock" Canvas.Top="0" Canvas.Left="-6" Width="12" Height="8" 
                            Background="#FFD700" CornerRadius="2" 
                            HorizontalAlignment="Center" />
                </Canvas>

                <!-- 切分点 -->
                <Grid Grid.Row="3" x:Name="SplitersContainer">
                    <!-- 切分点集合 -->
                    <Canvas x:Name="SplitPointsCanvas" Background="Transparent">
                        <!-- 切分点会在这里动态生成 -->
                    </Canvas>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl> 