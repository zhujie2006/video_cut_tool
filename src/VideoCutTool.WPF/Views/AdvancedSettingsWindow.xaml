<Window x:Class="VideoCutTool.WPF.Views.AdvancedSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="高级设置"
        Width="500" Height="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackgroundBrush}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/VideoCutTool.WPF;component/Resources/Styles/CommonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>        
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 视频编码设置 -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16" Style="{StaticResource CustomCardStyle}">
                    <StackPanel>
                        <TextBlock Text="视频编码设置" FontSize="16" FontWeight="Medium" 
                                   Margin="0,0,0,16" Foreground="{StaticResource PrimaryTextBrush}" />
                        
                        <TextBlock Text="视频编码器" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        <ComboBox ItemsSource="{Binding VideoCodecs}" 
                                  SelectedItem="{Binding SelectedVideoCodec}"
                                  Style="{StaticResource CustomComboBoxStyle}"
                                  Margin="0,0,0,12" />
                        
                        <TextBlock Text="比特率 (kbps)" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        <Slider Value="{Binding Bitrate}" Minimum="1000" Maximum="20000" 
                                TickFrequency="1000" TickPlacement="BottomRight"
                                Margin="0,0,0,12" />
                        <TextBlock Text="{Binding Bitrate, StringFormat='{}{0} kbps'}" 
                                   FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" 
                                   HorizontalAlignment="Center" />
                        
                        <TextBlock Text="关键帧间隔" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        <Slider Value="{Binding KeyframeInterval}" Minimum="1" Maximum="10" 
                                TickFrequency="1" TickPlacement="BottomRight"
                                Margin="0,0,0,12" />
                        <TextBlock Text="{Binding KeyframeInterval, StringFormat='{}{0} 秒'}" 
                                   FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" 
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- 音频编码设置 -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16" Style="{StaticResource CustomCardStyle}">
                    <StackPanel>
                        <TextBlock Text="音频编码设置" FontSize="16" FontWeight="Medium" 
                                   Margin="0,0,0,16" Foreground="{StaticResource PrimaryTextBrush}" />
                        
                        <CheckBox Content="包含音频" IsChecked="{Binding AudioEnabled}" 
                                  Margin="0,0,0,12" Foreground="{StaticResource PrimaryTextBrush}" />
                        
                        <TextBlock Text="音频编码器" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        <ComboBox ItemsSource="{Binding AudioCodecs}" 
                                  SelectedItem="{Binding SelectedAudioCodec}"
                                  Style="{StaticResource CustomComboBoxStyle}"
                                  Margin="0,0,0,12" />
                        
                        <TextBlock Text="音频比特率 (kbps)" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        <ComboBox ItemsSource="{Binding AudioBitrates}" 
                                  SelectedItem="{Binding SelectedAudioBitrate}"
                                  Style="{StaticResource CustomComboBoxStyle}"
                                  Margin="0,0,0,12" />
                        
                        <TextBlock Text="音频采样率" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        <ComboBox ItemsSource="{Binding AudioSampleRates}" 
                                  SelectedItem="{Binding SelectedAudioSampleRate}"
                                  Style="{StaticResource CustomComboBoxStyle}"
                                  Margin="0,0,0,12" />
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- 性能设置 -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16" Style="{StaticResource CustomCardStyle}">
                    <StackPanel>
                        <TextBlock Text="性能设置" FontSize="16" FontWeight="Medium" 
                                   Margin="0,0,0,16" Foreground="{StaticResource PrimaryTextBrush}" />
                        
                        <TextBlock Text="硬件加速" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        <ComboBox ItemsSource="{Binding HardwareAccelerationOptions}" 
                                  SelectedItem="{Binding SelectedHardwareAcceleration}"
                                  Style="{StaticResource CustomComboBoxStyle}"
                                  Margin="0,0,0,12" />
                        
                        <TextBlock Text="线程数" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        <Slider Value="{Binding ThreadCount}" Minimum="1" Maximum="16" 
                                TickFrequency="1" TickPlacement="BottomRight"
                                Margin="0,0,0,12" />
                        <TextBlock Text="{Binding ThreadCount, StringFormat='{}{0} 线程'}" 
                                   FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" 
                                   HorizontalAlignment="Center" />
                        
                        <CheckBox Content="使用GPU加速" IsChecked="{Binding UseGPUAcceleration}" 
                                  Margin="0,0,0,12" Foreground="{StaticResource PrimaryTextBrush}" />
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 按钮区域 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="重置默认" Margin="0,0,8,0" Padding="16,8" 
                    Background="{StaticResource SecondaryButtonBrush}" 
                    Foreground="{StaticResource ButtonTextBrush}"
                    Click="ResetToDefaults_Click" />
            <Button Content="确定" Margin="0,0,8,0" Padding="16,8" 
                    Background="{StaticResource PrimaryButtonBrush}" 
                    Foreground="{StaticResource PrimaryTextBrush}"
                    Click="OK_Click" />
            <Button Content="取消" Padding="16,8" 
                    Background="{StaticResource SecondaryButtonBrush}" 
                    Foreground="{StaticResource ButtonTextBrush}"
                    Click="Cancel_Click" />
        </StackPanel>
    </Grid>
</Window> 