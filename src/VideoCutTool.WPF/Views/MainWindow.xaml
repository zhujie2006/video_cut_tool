<Window x:Class="VideoCutTool.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoCutTool.WPF.Converters"
        xmlns:controls="clr-namespace:VideoCutTool.WPF.Views.Controls"
        mc:Ignorable="d"
        Title="视频剪辑工具 - Video Cut Tool"
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackgroundBrush}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- 自定义Card样式 -->
        <Style x:Key="CustomCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Background" Value="{StaticResource AppBackgroundBrush}" />
        </Style>

        <!-- 自定义 ColorZone 样式 -->
        <Style x:Key="CustomColorZoneStyle" TargetType="materialDesign:ColorZone">
            <Setter Property="Background" Value="{StaticResource AppBackgroundBrush}" />
        </Style>
        
        <!-- 自定义播放控制按钮样式 -->
        <Style x:Key="PlayControlButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="MinWidth" Value="24" />
            <Setter Property="MinHeight" Value="24" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#20FFFFFF" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#40FFFFFF" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 自定义ComboBox样式 -->
        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#0A0A0A" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        
        <!-- 最近导出项目样式 -->
        <Style x:Key="RecentExportItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#20FFFFFF" />
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 窗口控制按钮样式 -->
        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="46" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Foreground" Value="White" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#20FFFFFF" />
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 关闭按钮样式 -->
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowControlButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123" />
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 分隔线颜色 -->
        <SolidColorBrush x:Key="SeparatorBrush" Color="#364153" />
        
        <!-- 选中背景颜色 -->
        <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="#2D5A2D" />
        
        <!-- 转换器 -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        
        <!-- 音量转换器 -->
        <local:VolumeConverter x:Key="VolumeConverter" />
        
        <!-- 选中背景转换器 -->
        <local:SelectedBackgroundConverter x:Key="SelectedBackgroundConverter" />
        
        <!-- 调整大小边框样式 -->
        <Style x:Key="ResizeBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Cursor" Value="SizeAll" />
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4" x:Name="TimelineSeparatorRow" />
            <RowDefinition Height="200" x:Name="TimelineRow" MinHeight="100" MaxHeight="500" />
            <RowDefinition Height="1" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>        
        
        <!-- 视频区域下方分隔线 -->
        <Border Grid.Row="3" Background="{StaticResource SeparatorBrush}" />

        <!-- 时间轴上方分隔线 - 可拖拽调整高度 -->
        <Border Grid.Row="1" x:Name="TimelineSeparator" 
                Height="4" Cursor="SizeNS" 
                MouseLeftButtonDown="TimelineSeparator_MouseLeftButtonDown"
                MouseMove="TimelineSeparator_MouseMove"
                MouseLeftButtonUp="TimelineSeparator_MouseLeftButtonUp">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#364153" Offset="0" />
                    <GradientStop Color="#4A5A6B" Offset="0.5" />
                    <GradientStop Color="#364153" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        
        <!-- 主要内容区域 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="226" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="226" />
            </Grid.ColumnDefinitions>

            <!-- 左侧面板 - 编辑工具 -->
            <materialDesign:Card Grid.Column="0" Margin="6" Padding="12" Style="{StaticResource CustomCardStyle}">
                <StackPanel>
                    <Button Content="导入视频" Margin="4" Padding="12,8" MinWidth="80" Command="{Binding ImportVideoCommand}"
                            Background="{StaticResource PrimaryButtonBrush}" Foreground="{StaticResource PrimaryTextBrush}" />
                    <Button Content="加载项目" Margin="4" Padding="12,8" MinWidth="80" Command="{Binding LoadProjectCommand}"
                            Background="{StaticResource SecondaryButtonBrush}" Foreground="{StaticResource ButtonTextBrush}" />
                    <!-- 编辑工具 -->
                    <TextBlock Text="编辑工具" FontSize="14" FontWeight="Medium" Margin="0,0,0,8" Foreground="{StaticResource PrimaryTextBrush}" />
                    <StackPanel Margin="0,0,0,16">
                        <Button Command="{Binding SplitVideoCommand}" Margin="0,4" Padding="12,8" HorizontalAlignment="Stretch"
                                Background="{StaticResource SecondaryButtonBrush}" Foreground="{StaticResource ButtonTextBrush}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentCut" Width="16" Height="16" Margin="0,0,8,0" />
                                <TextBlock Text="切分" />
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding DeleteSegmentCommand}" Margin="0,4" Padding="12,8" HorizontalAlignment="Stretch"
                                IsEnabled="{Binding CanDelete}" Background="{StaticResource SecondaryButtonBrush}" Foreground="{StaticResource ButtonTextBrush}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" Width="16" Height="16" Margin="0,0,8,0" />
                                <TextBlock Text="删除 (1)" />
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding CopySegmentCommand}" Margin="0,4" Padding="12,8" HorizontalAlignment="Stretch"
                                IsEnabled="{Binding CanCopy}" Background="{StaticResource SecondaryButtonBrush}" Foreground="{StaticResource ButtonTextBrush}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentCopy" Width="16" Height="16" Margin="0,0,8,0" />
                                <TextBlock Text="复制" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- 回溯 -->
                    <TextBlock Text="回溯" FontSize="14" FontWeight="Medium" Margin="0,0,0,8" Foreground="{StaticResource PrimaryTextBrush}" />
                    <StackPanel Margin="0,0,0,16">
                        <Button Command="{Binding UndoCommand}" Margin="0,4" Padding="12,8" HorizontalAlignment="Stretch"
                                IsEnabled="{Binding CanUndo}" Background="{StaticResource SecondaryButtonBrush}" Foreground="{StaticResource ButtonTextBrush}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Undo" Width="16" Height="16" Margin="0,0,8,0" />
                                <TextBlock Text="撤销" />
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding RedoCommand}" Margin="0,4" Padding="12,8" HorizontalAlignment="Stretch"
                                IsEnabled="{Binding CanRedo}" Background="{StaticResource SecondaryButtonBrush}" Foreground="{StaticResource ButtonTextBrush}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Redo" Width="16" Height="16" Margin="0,0,8,0" />
                                <TextBlock Text="重做" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- 存储管理 -->
                    <TextBlock Text="存储管理" FontSize="14" FontWeight="Medium" Margin="0,0,0,8" Foreground="{StaticResource PrimaryTextBrush}" />
                    <StackPanel Margin="0,0,0,16">
                        <Button Command="{Binding SaveProjectCommand}" Margin="0,4" Padding="12,8" HorizontalAlignment="Stretch"
                                Background="{StaticResource SecondaryButtonBrush}" Foreground="{StaticResource ButtonTextBrush}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentSave" Width="16" Height="16" Margin="0,0,8,0" />
                                <TextBlock Text="保存项目" />
                            </StackPanel>
                        </Button>
                    </StackPanel>



                    <!-- 快捷键 -->
                    <TextBlock Text="快捷键" FontSize="14" FontWeight="Medium" Margin="0,0,0,8" Foreground="{StaticResource PrimaryTextBrush}" />
                    <StackPanel Margin="0,0,0,8">
                        <TextBlock Text="S - 分割" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        <TextBlock Text="Del - 删除" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        <TextBlock Text="Ctrl+C - 复制" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        <TextBlock Text="Ctrl+Z - 撤销" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        <TextBlock Text="Space - 播放/暂停" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- 中央区域 - 视频播放器和时间轴 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- 视频播放器 -->
                <Border Grid.Row="0" Background="Black" BorderBrush="Gray" BorderThickness="1" Margin="4" CornerRadius="4">
                    <Grid>
                        <!-- MediaElement 视频播放器 -->
                        <MediaElement x:Name="VideoPlayer" 
                                     Source="{Binding VideoSource}" 
                                     LoadedBehavior="Manual"
                                     UnloadedBehavior="Stop"
                                     ScrubbingEnabled="True"
                                     MediaOpened="VideoPlayer_MediaOpened"
                                     MediaEnded="VideoPlayer_MediaEnded"
                                     Volume="{Binding Volume, Converter={StaticResource VolumeConverter}}"
                                     Stretch="Uniform" />
                        
                        <!-- 视频信息覆盖层 -->
                        <Border Background="#80000000" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                                Margin="8" Padding="8,4" CornerRadius="4">
                            <TextBlock Text="{Binding VideoInfo.Resolution}" 
                                       Foreground="White" FontSize="12" />
                        </Border>
                        
                        <!-- 当前时间显示 -->
                        <Border Background="#80000000" VerticalAlignment="Top" HorizontalAlignment="Left" 
                                Margin="8" Padding="8,4" CornerRadius="4">
                            <TextBlock Text="{Binding TimeDisplay}" 
                                       Foreground="White" FontSize="14" FontWeight="Medium" />
                        </Border>
                    </Grid>
                </Border>

                <!-- 播放控制 -->
                <materialDesign:Card Grid.Row="1" Margin="4" Padding="2" Style="{StaticResource CustomCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- 播放控制按钮 -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Command="{Binding PreviousFrameCommand}" Style="{StaticResource PlayControlButtonStyle}">
                                <materialDesign:PackIcon Kind="SkipPrevious" Width="20" Height="20" />
                            </Button>
                            <Button Command="{Binding PlayPauseCommand}" Style="{StaticResource PlayControlButtonStyle}">
                                <materialDesign:PackIcon Kind="{Binding PlayPauseIcon}" Width="20" Height="20" />
                            </Button>
                            <Button Command="{Binding NextFrameCommand}" Style="{StaticResource PlayControlButtonStyle}">
                                <materialDesign:PackIcon Kind="SkipNext" Width="20" Height="20" />
                            </Button>
                        </StackPanel>

                        <!-- 时间显示 -->
                        <TextBlock Grid.Column="1" Text="{Binding PreciseTimeDisplay}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                                   FontSize="14" FontWeight="Medium" 
                                   Foreground="{StaticResource PrimaryTextBrush}" />

                        <!-- 音量控制 -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="VolumeHigh" Width="16" Height="16" Margin="0,0,4,0" Foreground="{StaticResource PrimaryTextBrush}" />
                            <Slider Value="{Binding Volume}" Minimum="0" Maximum="100" Width="80" Margin="16,0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- 右侧面板 - 导出设置 -->
            <materialDesign:Card Grid.Column="2" Margin="6" Padding="12" Style="{StaticResource CustomCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Button Content="导出" Grid.Row="0" Margin="4" Padding="12,8" MinWidth="80" Command="{Binding ExportCommand}"
                            Background="{StaticResource PrimaryButtonBrush}" Foreground="{StaticResource PrimaryTextBrush}" />

                    <!-- 导出设置 -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="导出设置" FontSize="16" FontWeight="Medium" Margin="0,0,0,16" Foreground="{StaticResource PrimaryTextBrush}" />
                        
                        <TextBlock Text="格式" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        <ComboBox ItemsSource="{Binding ExportFormats}" 
                                  SelectedItem="{Binding SelectedExportFormat}"
                                  Style="{StaticResource CustomComboBoxStyle}"
                                  Margin="0,0,0,8" />
                        
                        <TextBlock Text="质量" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        <ComboBox ItemsSource="{Binding ExportQualities}" 
                                  SelectedItem="{Binding SelectedExportQuality}"
                                  Style="{StaticResource CustomComboBoxStyle}"
                                  Margin="0,0,0,8" />
                        
                        <TextBlock Text="帧率" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        <ComboBox ItemsSource="{Binding FrameRates}" 
                                  SelectedItem="{Binding SelectedFrameRate}"
                                  Style="{StaticResource CustomComboBoxStyle}"
                                  Margin="0,0,0,16" />
                    </StackPanel>

                    <!-- 项目信息 -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,16">
                        <TextBlock Text="项目信息" FontSize="14" FontWeight="Medium" Margin="0,0,0,8" Foreground="{StaticResource PrimaryTextBrush}" />
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="{Binding ProjectInfo.Name, StringFormat='名称: {0}'}" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                            <TextBlock Text="{Binding ProjectInfo.TotalDuration, StringFormat='总时长: {0}'}" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                            <TextBlock Text="{Binding ProjectInfo.SegmentCount, StringFormat='分段数: {0}'}" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                            <TextBlock Text="{Binding ProjectInfo.OutputDuration, StringFormat='输出时长: {0}'}" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                            <TextBlock Text="{Binding ProjectInfo.EstimatedSize, StringFormat='预估大小: {0}'}" FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        </StackPanel>
                    </StackPanel>

                    <!-- 高级设置按钮 -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,16">
                        <Button Content="高级设置" 
                                Margin="8" 
                                Padding="12,8" 
                                MinWidth="80"
                                Background="{StaticResource SecondaryButtonBrush}" Foreground="{StaticResource ButtonTextBrush}"
                                Command="{Binding AdvancedSettingsCommand}" />
                    </StackPanel>
                    
                    <!-- 最近导出 -->
                    <StackPanel Grid.Row="4">
                        <TextBlock Text="最近导出" FontSize="14" FontWeight="Medium" Margin="0,0,0,8" Foreground="{StaticResource PrimaryTextBrush}" />
                        <ItemsControl ItemsSource="{Binding RecentExports}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource RecentExportItemStyle}" 
                                            Command="{Binding DataContext.OpenExportFileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding FilePath}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <materialDesign:PackIcon Grid.Column="0" Kind="Video" Width="16" Height="16" 
                                                                   Margin="0,0,8,0" Foreground="{StaticResource PrimaryTextBrush}" />
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding FileName}" FontSize="12" Foreground="{StaticResource PrimaryTextBrush}" />
                                                <TextBlock Text="{Binding ExportTime}" FontSize="10" Foreground="{StaticResource SecondaryTextBrush}" />
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- 时间轴控件 -->
        <controls:TimelineControl Grid.Row="2" Margin="4" x:Name="TimelineControl" 
            Background="{StaticResource AppBackgroundBrush}" />

        <!-- 底部状态栏 -->
        <materialDesign:ColorZone Grid.Row="4" Mode="PrimaryLight" Padding="16,4" Style="{StaticResource CustomColorZoneStyle}">
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Foreground="{StaticResource SecondaryTextBrush}" />
        </materialDesign:ColorZone>
    </Grid>
    
</Window>
