<Window x:Class="VideoCutTool.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoCutTool.WPF.Converters"
        xmlns:controls="clr-namespace:VideoCutTool.WPF.Views.Controls"
        mc:Ignorable="d"
        Title="视频剪辑工具 - Video Cut Tool"
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackgroundBrush}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <!-- 最近导出项目样式 -->
        <Style x:Key="RecentExportItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#20FFFFFF" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 音量转换器 -->
        <local:VolumeConverter x:Key="VolumeConverter" />
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4" x:Name="TimelineSeparatorRow" />
            <RowDefinition Height="200" x:Name="TimelineRow" MinHeight="160" MaxHeight="300" />
            <RowDefinition Height="1" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>        
        
        <!-- 视频区域下方分隔线 -->
        <Border Grid.Row="3" Background="{StaticResource SeparatorBrush}" />

        <!-- 时间轴上方分隔线 - 可拖拽调整高度 -->
        <Border Grid.Row="1" x:Name="TimelineSeparator" 
                Height="4" Cursor="SizeNS" 
                MouseLeftButtonDown="TimelineSeparator_MouseLeftButtonDown"
                MouseMove="TimelineSeparator_MouseMove"
                MouseLeftButtonUp="TimelineSeparator_MouseLeftButtonUp">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#364153" Offset="0" />
                    <GradientStop Color="#4A5A6B" Offset="0.5" />
                    <GradientStop Color="#364153" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        
        <!-- 主要内容区域 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="180" />
            </Grid.ColumnDefinitions>

            <!-- 中央区域 - 视频播放器和时间轴 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- 视频播放器 -->
                <Border Grid.Row="0" Background="Black" BorderBrush="Gray" BorderThickness="1"
                        Margin="6,10,6,2" CornerRadius="4">
                    <Grid>
                        <!-- MediaElement 视频播放器 -->
                        <MediaElement x:Name="VideoPlayer" 
                                     Source="{Binding VideoSource}" 
                                     LoadedBehavior="Manual"
                                     UnloadedBehavior="Stop"
                                     ScrubbingEnabled="True"
                                     MediaOpened="VideoPlayer_MediaOpened"
                                     MediaEnded="VideoPlayer_MediaEnded"
                                     Volume="{Binding Volume, Converter={StaticResource VolumeConverter}}"
                                     Stretch="Uniform" />
                        
                        <!-- 视频信息覆盖层 -->
                        <Border Background="#80000000" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                                Margin="10,16" Padding="8,4" CornerRadius="4">
                            <TextBlock Text="{Binding VideoInfo.Resolution}" 
                                       Foreground="White" FontSize="12" />
                        </Border>
                    </Grid>
                </Border>

                <!-- 播放控制 -->
                <materialDesign:Card Grid.Row="1" Margin="16,0" Padding="2" Style="{StaticResource CustomCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- 播放控制按钮 -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button Command="{Binding PreviousFrameCommand}" Style="{StaticResource PlayControlButtonStyle}">
                                <materialDesign:PackIcon Kind="SkipPrevious" Width="20" Height="20" />
                            </Button>
                            <Button Command="{Binding PlayPauseCommand}" Style="{StaticResource PlayControlButtonStyle}">
                                <materialDesign:PackIcon Kind="{Binding PlayPauseIcon}" Width="20" Height="20" />
                            </Button>
                            <Button Command="{Binding NextFrameCommand}" Style="{StaticResource PlayControlButtonStyle}">
                                <materialDesign:PackIcon Kind="SkipNext" Width="20" Height="20" />
                            </Button>                            
                        </StackPanel>

                        <!-- 时间显示 -->
                        <TextBlock Grid.Column="0" Text="{Binding TimeDisplay}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                                    Foreground="{StaticResource PrimaryTextBrush}" 
                                   FontSize="14" FontWeight="Medium" />

                        <!-- 音量控制 -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="VolumeHigh" Width="16" Height="16" Margin="0,0,4,0" Foreground="{StaticResource PrimaryTextBrush}" />
                            <Slider Value="{Binding Volume}" Minimum="0" Maximum="100" Width="80" Margin="16,0,10,0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- 右侧控制面板 -->
            <materialDesign:Card Grid.Column="2" Style="{StaticResource CustomCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" /> <!-- 分割线 -->
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Button Content="导入视频" Grid.Row="0" Margin="16,16,16,0"
                            Command="{Binding ImportVideoCommand}"
                            Background="{StaticResource PrimaryButtonBrush}" Foreground="{StaticResource PrimaryTextBrush}" />
                    <Button Content="加载项目" Grid.Row="1" Margin="16,16,16,0"
                            Command="{Binding LoadProjectCommand}"
                            Background="{StaticResource SecondaryButtonBrush}" Foreground="{StaticResource ButtonTextBrush}" />
                    <Button Content="保存项目" Grid.Row="2" Margin="16,16,16,0"
                            Command="{Binding SaveProjectCommand}" 
                            Background="{StaticResource SecondaryButtonBrush}" Foreground="{StaticResource ButtonTextBrush}"/>


                    <Border Grid.Row="3" Height="2" Background="{StaticResource SeparatorBrush}" VerticalAlignment="Top" Margin="2,16,2,0"/>


                    <!-- 导出设置 -->
                    <StackPanel Grid.Row="4" Margin="16,16,16,0">
                        <TextBlock Text="格式" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" />
                        <ComboBox ItemsSource="{Binding SettingViewModel.ExportFormats}" 
                                  SelectedItem="{Binding SelectedExportFormat}"
                                  Style="{StaticResource CustomComboBoxStyle}"
                                  Margin="0,4,0,8" />
                        
                        <TextBlock Text="质量" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" />
                        <ComboBox ItemsSource="{Binding SettingViewModel.ExportQualities}" 
                                  SelectedItem="{Binding SelectedExportQuality}"
                                  Style="{StaticResource CustomComboBoxStyle}"
                                  Margin="0,4,0,8" />
                        
                        <TextBlock Text="帧率" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" />
                        <ComboBox ItemsSource="{Binding SettingViewModel.FrameRates}" 
                                  SelectedItem="{Binding SelectedFrameRate}"
                                  Style="{StaticResource CustomComboBoxStyle}"
                                  Margin="0,4,0,8" />

                        <!-- 高级设置按钮 -->
                        <Button Content="高级设置" Command="{Binding AdvancedSettingsCommand}" Margin="0,8,0,0" 
                                Background="{StaticResource SecondaryButtonBrush}" Foreground="{StaticResource ButtonTextBrush}"/>

                        <Button Content="导出" Margin="0,16,0,0" 
                                Command="{Binding ExportCommand}"
                                Background="{StaticResource PrimaryButtonBrush}" Foreground="{StaticResource PrimaryTextBrush}" />
                    </StackPanel>

                    <Border Grid.Row="5" Height="2" Background="{StaticResource SeparatorBrush}" VerticalAlignment="Top" Margin="2,16,2,0"/>
                    <!-- 项目信息 -->
                    <StackPanel Grid.Row="6" Margin="16">
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="{Binding ProjectInfo.Name, StringFormat='名称: {0}'}" 
                                       TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding ProjectInfo.Name, StringFormat='名称: {0}'}"
                                       FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                            <TextBlock Text="{Binding ProjectInfo.Duration, StringFormat='总时长: {0}'}" 
                                       FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                            <TextBlock Text="{Binding ProjectInfo.TimelineSegments.Count, StringFormat='分段数: {0}'}" 
                                       FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                            <TextBlock Text="{Binding ProjectInfo.OutputDuration, StringFormat='输出时长: {0}'}"
                                       FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                            <TextBlock Text="{Binding ProjectInfo.EstimatedSize, StringFormat='预估大小: {0}'}"
                                       FontSize="12" Margin="4" Foreground="{StaticResource SecondaryTextBrush}" />
                        </StackPanel>
                    </StackPanel>

                    <Border Grid.Row="7" Height="2" Background="{StaticResource SeparatorBrush}" VerticalAlignment="Top" Margin="2,16,2,0"/>

                    <!-- 最近导出 -->
                    <StackPanel Grid.Row="8" Margin="16">
                        <TextBlock Text="最近导出" FontSize="14" FontWeight="Medium" Margin="0,0,0,8" Foreground="{StaticResource PrimaryTextBrush}" />
                        <ItemsControl ItemsSource="{Binding RecentExports}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource RecentExportItemStyle}" 
                                            Command="{Binding DataContext.OpenExportFileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding FilePath}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <materialDesign:PackIcon Grid.Column="0" Kind="Video" Width="16" Height="16" 
                                                                   Margin="0,0,8,0" Foreground="{StaticResource PrimaryTextBrush}" />
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding FileName}" FontSize="12" Foreground="{StaticResource PrimaryTextBrush}" />
                                                <TextBlock Text="{Binding ExportTime}" FontSize="10" Foreground="{StaticResource SecondaryTextBrush}" />
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- 时间轴控件 -->
        <controls:TimelineControl Grid.Row="2" Margin="4" x:Name="TimelineControl" MinHeight="160"
            Background="{StaticResource AppBackgroundBrush}" DataContext="{Binding TimelineViewModel}"/>

        <!-- 底部状态栏 -->
        <materialDesign:ColorZone Grid.Row="4" Mode="PrimaryLight" Padding="16,4" Style="{StaticResource CustomColorZoneStyle}">
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Foreground="{StaticResource SecondaryTextBrush}" />
        </materialDesign:ColorZone>
    </Grid>
    
</Window>
